# CLOUDFLARE_SECRET_ACCESS_KEY=your-r2-secret-access-key
# NEXT_PUBLIC_R2_PUBLIC_URL=https://your-bucket.r2.dev
# R2_BUCKET_NAME=my-cms-bucket
